{
  "default": {
    "formatOptions": {
      "snippetInterface": "async-await"
    },
    "paths": [
      "src/test/features/"
    ],
    "require": [
      "src/test/steps/*.ts",
      "src/hooks/hooks.ts"
    ],
    "requireModule": [
      "ts-node/register"
    ],
    "reporter": [
      "@cucumber/allure-reporter"
    ],
    "reporterOptions": {
      "allure": {
        "outputDir": "./allure-results"
      }
    },
    "publishQuite": true,
    "dryRun": false,
    "format": [
      "html:cucumber_report.html"
    ]
  }
}
